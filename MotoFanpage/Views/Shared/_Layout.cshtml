<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #e8eaef; font-family: 'Roboto',sans-serif">
    <div class="navbar navbar-light navbar-fixed-top" style="        background-color: #e8eaef;">
        <div class="row">
            <div class="col-md-4">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("MotoFanpage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-3">
                <div class="navbar-collapse collapse">

                    @Html.Partial("_LoginPartial")
                </div>
            </div>

        </div>
    </div>
    <div class="row" style="background-color: #e8eaef">
        <div class="col-md-2" style="background-color: #e8eaef">
            <div class="navbar-collapse navbar-light " style="background-color: #e8eaef">
                <ul class="nav flex-column">
                    <li class="nav-item"> @Html.ActionLink("Aukcje", "Index", "Aukcja")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Zarejestrowani Użytkownicy", "Index", "Profil")</li>
                        <li class="nav-item">@Html.ActionLink("Zaproszenia", "Index", "FriendReq")</li>
                        <li class="nav-item">@Html.ActionLink("Priv", "Index", "WiadomoscPriv")</li>
                    }
                      @if (User.IsInRole("Admin"))
                      {
                            <li class="nav-item">@Html.ActionLink("Logi", "Index", "Logi")</li>
                      }
                </ul>

            </div>
        </div>
        <div class="col-md-7">
            <div class="container body-content" style="background-color:white;margin-top:17px;border-radius:20px;border:1px white solid">

                @RenderBody()
                <hr />

            </div>
            <div class="col-md-1"></div>
        </div>

    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
